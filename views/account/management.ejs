<h1 class="account-management-title"><%= title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<% if(locals.accountData.account_type == 'Client') { %>
    <h2 class="welcome-message">Welcome, <%= name %></h2>

    <h3 class="management-header">Account Management</h3>   
    <ul class="account-management-list">
      <li><a title="Click to edit your account information" href="/account/update/">Edit your account information</a></li>
    </ul>

<% } else if (locals.accountData.account_type == 'Employee' || locals.account_data_type == 'Admin'){ %>
    <h2 class="welcome-message">Welcome, <%= name %></h2>

    <h3 class="management-header">Account Management</h3>   
    <ul class="account-management-list">
      <li><a title="Click to edit your account information" href="/account/update/">Edit your account information</a></li>
    </ul>

    <h3 class="management-header">Inventory Management</h3>
    <ul class="inventory-management-list">
      <li><a title="Click to update the inventory" href="/inv/">Update the current inventory</a></li>
  </ul>

<% } else if (locals.accountData.account_type == 'Admin') { %>
    <h2 class="welcome-message">Welcome, <%= name %></h2>

    <h3 class="management-header">Account Management</h3>   
    <ul class="account-management-list">
      <li><a title="Click to edit your account information" href="/account/update/">Edit your account information</a></li>
    </ul>

    <h3 class="management-header">Inventory Management</h3>
    <ul class="inventory-management-list">
      <li><a title="Click to update the inventory" href="/inv/">Update the current inventory</a></li>
    </ul>

    <h3 class="management-header">Approval Management</h3>
    <ul class="inventory-management-list">
      <li><a title="Click to approve the updates" href="/inv/approval">Approve the newest updates to the inventory</a></li>
    </ul>
  <% }%>