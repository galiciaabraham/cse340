<h1 class="registration-page-title"><%= title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
<div class="registrer-wrapper">
    <div class="register-box">
        <form action="/account/register" method="post">
            <p>All fields are required</p>
            <hr>
            <label for="account_firstname">
                First Name:
                <input type="text" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname %>">

            </label>
            <label for="account_lastname">
                Last Name:
                <input type="text" name="account_lastname" id="accountLastname" required value="<%= locals.account_lastname %>">
            </label>
            <label for="account_email">
                Email:
                <input type="email" name="account_email" id="accountEmail" required value="<%= locals.account_email%>" placeholder="email@email.com">
            </label>
            <label for="account_password">
                Password:
                <input type="password" name="account_password"  id="pword" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            </label>
            <!-- <span id="ShowPswBtn">Show Password</span> -->
            <p>Passwords must be minimum of 12 characters and include 1 lower case, 1 capital letter, 1 number and 1 special character(*, &, $, %, #, @, !)</p>
            <button type="submit" class="register-button">Register</button>
        </form>
        <p class="registered">Already have an account? <a class="login" href="/account/login">Login</a></p>
    </div>
</div>
